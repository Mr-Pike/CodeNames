@model Teams
@{
    ViewData["Title"] = "Index";
}

@section Styles {
    <link rel="stylesheet" href="~/css/bootstrap-colorpicker.min.css" />
}

<h2>Edit Team</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <div id="color-picker" class="input-group" title="Using input value">
                    <input asp-for="Color" class="form-control" />
                    <span class="input-group-append">
                        <span class="input-group-text colorpicker-input-addon"><i></i></span>
                    </span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="BackgroundColor" class="control-label"></label>
                <div id="background-color-picker" class="input-group" title="Using input value">
                    <input asp-for="BackgroundColor" class="form-control" />
                    <span class="input-group-append">
                        <span class="input-group-text colorpicker-input-addon"><i></i></span>
                    </span>
                </div>
            </div>
            <div class="form-group">
                <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
                <input type="submit" value="Save" class="btn btn-outline-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/bootstrap-colorpicker.min.js"></script>
    <script>
        $(function () {
            $('#color-picker').colorpicker();
            $('#background-color-picker').colorpicker();
        });
    </script>
}