@model IEnumerable<ViewGames>
@{
    Layout = null;
}
<html>
<head>
    <style>
        td {
            border: 2px solid black;
            width: 75px;
            height: 75px;
        text-align: center;
        }

        table {
            border: 10px solid black;
            border-collapse: collapse;
        }

        .indicator-start {
            position: absolute;
            border-radius: 8px;
            border: 1px solid;
            background-color: @(ViewData["BackgroundColorTeamStarted"]);
        }

        #indicator-start-1 {
            width: 50px;
            height: 20px;
            top: 5;
            left: 190;
        }

        #indicator-start-2 {
            width: 20px;
            height: 50px;
            top: 175;
            left: 405;
        }

        #indicator-start-3 {
            width: 50px;
            height: 20px;
            top: 375;
            left: 190;
        }

        #indicator-start-4 {
            width: 20px;
            height: 50px;
            top: 175;
            left: 5;
        }
    </style>
</head>
<body>
    <table>
        <tbody>
            @for (int i = 0; i < Model.Count(); i += 5)
            {
                <tr>
                    <td style="@("background-color:" + Model.ElementAt(i).BackgroundColorName);">
                        @switch (Model.ElementAt(i).TeamId)
                        {
                            case (short)CodeNames.Enums.TeamsEnums.BlueTeam:
                                <img src="~/img/circle.png" />
                                break;
                            case (short)CodeNames.Enums.TeamsEnums.RedTeam:
                                <img src="~/img/diamond.png" />
                                break;
                            case (short)CodeNames.Enums.TeamsEnums.LooseTeam:
                                <img src="~/img/cross.png" />
                                break;
                        }
                    </td>
                    <td style="@("background-color:" + Model.ElementAt(i + 1).BackgroundColorName);">
                        @switch (Model.ElementAt(i + 1).TeamId)
                        {
                            case (short)CodeNames.Enums.TeamsEnums.BlueTeam:
                                <img src="~/img/circle.png" />
                                break;
                            case (short)CodeNames.Enums.TeamsEnums.RedTeam:
                                <img src="~/img/diamond.png" />
                                break;
                            case (short)CodeNames.Enums.TeamsEnums.LooseTeam:
                                <img src="~/img/cross.png" />
                                break;
                        }
                    </td>
                    <td style="@("background-color:" + Model.ElementAt(i + 2).BackgroundColorName);">
                        @switch (Model.ElementAt(i + 2).TeamId)
                        {
                            case (short)CodeNames.Enums.TeamsEnums.BlueTeam:
                                <img src="~/img/circle.png" />
                                break;
                            case (short)CodeNames.Enums.TeamsEnums.RedTeam:
                                <img src="~/img/diamond.png" />
                                break;
                            case (short)CodeNames.Enums.TeamsEnums.LooseTeam:
                                <img src="~/img/cross.png" />
                                break;
                        }
                    </td>
                    <td style="@("background-color:" + Model.ElementAt(i + 3).BackgroundColorName);">
                        @switch (Model.ElementAt(i + 3).TeamId)
                        {
                            case (short)CodeNames.Enums.TeamsEnums.BlueTeam:
                                <img src="~/img/circle.png" />
                                break;
                            case (short)CodeNames.Enums.TeamsEnums.RedTeam:
                                <img src="~/img/diamond.png" />
                                break;
                            case (short)CodeNames.Enums.TeamsEnums.LooseTeam:
                                <img src="~/img/cross.png" />
                                break;
                        }
                    </td>
                    <td style="@("background-color:" + Model.ElementAt(i + 4).BackgroundColorName);">
                        @switch (Model.ElementAt(i + 4).TeamId)
                        {
                            case (short)CodeNames.Enums.TeamsEnums.BlueTeam:
                                <img src="~/img/circle.png" />
                                break;
                            case (short)CodeNames.Enums.TeamsEnums.RedTeam:
                                <img src="~/img/diamond.png" />
                                break;
                            case (short)CodeNames.Enums.TeamsEnums.LooseTeam:
                                <img src="~/img/cross.png" />
                                break;
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="indicator-start" id="indicator-start-1"></div>
    <div class="indicator-start" id="indicator-start-2"></div>
    <div class="indicator-start" id="indicator-start-3"></div>
    <div class="indicator-start" id="indicator-start-4"></div>
</body>
</html>
